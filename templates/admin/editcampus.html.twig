{% extends 'layoutDisplay.html.twig' %}

{% block title %}
    Admin | Campus
{% endblock %}

{% block mainSection %}
    {{ parent() }}
    <div class="titre-h1-campus">
        <h1>Ajouter un Campus<span class="point-logo">.</span></h1>
    </div>
    {{ form(campusForm) }}
    {{ form_start(addCampusForm) }}
    <div class="table-responsive-Campus">
        <table class="scroll table-sm table-striped table-bordered table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Campus</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for c in listeCampus %}
                <tr>
                    <td>{{ c.nomCampus }}</td>
                    <td><a href="{{ path('up_campus', {'id': c.id}) }}">Modifier</a> -
                        <a href="{{ path('del_campus', {'id': c.id}) }}">Supprimer</a>
                </tr>
            {% endfor %}
            <tr>
                <td>{{ form_widget(addCampusForm.nomCampus) }}</td>
                <td>{{ form_rest(addCampusForm) }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    {{ form_end(addCampusForm) }}
   <footer class="home-footer">
       <p>Made with ❤️</p>
{   </footer>
{% endblock %}
