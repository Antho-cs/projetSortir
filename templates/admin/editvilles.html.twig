{% extends 'layoutDisplay.html.twig' %}
{% block titrePage %}
{% endblock %}

{% block mainSection %}
    {{ parent() }}
    {{ form(villesForm) }}
    {{ form_start(addVillesForm) }}
    <table class="scroll">
        <thead>
        <tr>
            <th>Ville</th>
            <th>Code postal</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for v in listeVilles %}
            <tr>
                <td>{{ v.nomVille }}</td>
                <td>{{ v.codePostal }}</td>
                <td><a href="{{ path('up_villes', {'id': v.id}) }}">Modifier</a> -
                        <a href="{{ path('del_villes', {'id': v.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        <tr>
            <td>{{ form_widget(addVillesForm.nomVille) }}</td>
            <td>{{ form_widget(addVillesForm.codePostal) }}</td>
            <td>{{ form_rest(addVillesForm) }}</td>
        </tr>
        </tbody>
    </table>
    {{ form_end(addVillesForm) }}
{% endblock %}