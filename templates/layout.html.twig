<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    {% block meta %}{% endblock %}
    <link rel="icon" type="image/png" href="{{ asset('assets/img/fav.png') }}">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>

    <title>{% block title %}Sortir.com | Connexion{% endblock %}</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
        <!-- Logo -->
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
        <!-- Text -->
    <link href="https://fonts.googleapis.com/css2?family=Mako&family=Pacifico&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/icofont/icofont.min.css" rel="stylesheet">
    <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="assets/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">

    <link href="assets/vendor/aos/aos.css" rel="stylesheet">

    <!-- Template CSS -->
    <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">

    <!-- additional CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/ourstyle.css') }}">
</head>

<body id="{% block bg %}{% endblock %}">
<!-- ======= Header ======= -->
<header id="header" class="header-transparent">

        <div class="container d-flex align-items-center">
            <div class="logo mr-auto">
                <h1 class="text-light"><a href="{{ path('home') }}"><span>Sortir<span class="point-logo">.</span>com</span></a></h1>
            </div>
            <nav class="nav-menu d-none d-lg-block">
                <ul>
                    {% if is_granted("ROLE_ADMIN") %} {# Quand connecté en admin #}
                        <a href="{{ path('edit_villes') }}">Ville</a>
                        <a href="{{ path('edit_campus') }}">Campus</a>
                        <a href="{{ path('home') }}">Accueil</a>
                        <a href="{{ path('update_user',{'id' : app.user.id}) }}">Mon profil</a>
                        <a href="{{ path('app_logout') }}">Déconnecter</a>

                    {% elseif is_granted("ROLE_USER") %} {# Quand connecté en user #}
                        <a href="{{ path('home') }}">Accueil</a>
                        <a href="{{ path('update_user',{'id' : app.user.id}) }}">Mon profil</a>
                        <a href="{{ path('app_logout') }}">Déconnecter</a>
                    {% else %}
                        {# ici lien quand non connecté #}
                    {% endif %}
                </ul>
            </nav><!-- .nav-menu -->
        </div>
</header><!-- End Header -->

<!-- ======= Main view Section ======= -->

<section id="hero">
    <div class="hero-container" data-aos="fade-up">
        {% block titrePage %}
            <h1>Bienvenue à Sortir<span class="point-logo">.</span>com</h1>
        {%  endblock %}
        {# Affiche flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        {% block mainSection %}{% endblock %}
    </div>
</section><!-- End Hero -->

<!-- Additional information -->
{% block scrollableInfo %}{% endblock %}

<!-- ======= Footer ======= -->
{% block footer %}
    <footer id="footer">
    <p>Made with ❤️</p>
    </footer>
{% endblock %}<!-- End Footer -->

<a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>

<!-- Vendor JS Files -->
<script src="assets/vendor/jquery/jquery.min.js"></script>
<script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="assets/vendor/jquery.easing/jquery.easing.min.js"></script>
<script src="assets/vendor/waypoints/jquery.waypoints.min.js"></script>
<script src="assets/vendor/counterup/counterup.min.js"></script>
<script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
<script src="assets/vendor/venobox/venobox.min.js"></script>
<script src="assets/vendor/owl.carousel/owl.carousel.min.js"></script>
<script src="assets/vendor/aos/aos.js"></script>



{% block javascripts %}{% endblock %}
<!-- Template Main JS File -->
<script src="assets/js/main.js"></script>
</body>

</html>