{% extends 'layout.html.twig' %}

{% block titrePage %}
{% endblock %}


{% block mainSection %}
    <div class="pageComplet">
    <div class="infos">
        Date du jour : {{ "now"|date("d/m/Y") }} <br>
        Participant : {{ app.user.Pseudo }}
    </div>
    {{ parent() }}

    <div class="formComplet">

    <div class="formGauche">

        <div class="formTitre">
            <h3>Filtrer les sorties</h3>
            {{ form_start(homeform) }}
            {{ form_row(homeform.campus) }}
            {{ form_row(homeform.nomSortie) }}
            {{ form_row(homeform.datedebut, {'attr' : {'min': "now"|date('Y-m-d') }} ) }}
            {{ form_row(homeform.datecloture, {'attr' : {'min': "now"|date('Y-m-d') }} ) }}
            {{ form_end(homeform) }}

        </div>
        {# -------------------  Liste Déroulante des Sorties ----------------------- #}

        <div class="listSortie">
            <table>
                <tr>
                    <th>Nom de la sortie</th>
                    <th>Date de la sortie</th>
                    <th>Clôture</th>
                    <th>Inscrits/Places</th>
                    <th>Etat</th>
                    <th>Inscrit</th>
                    <th>Organisateur</th>
                    <th>Actions</th>
                </tr>


                {# //TODO  Voir les objet/attributs à call #}
                {% for sortie in sorties %}
                    <tr>

                        <td> {{ sortie.nom}} </td>
                        <td> {{ sortie.getDateDebut() | date ('d-m-Y')}} </td>
                        <td> {{ sortie.dateCloture() | date ('d-m-Y')}} </td>
                        <td> {{ sortie.inscriptions|length}} / {{ sortie.nbInscriptionsmax}} </td>
                        <td> {{ sortie.getEtat().getLibelle()}} </td>
                        <td> {# INSCRIT ???????????   #} </td>
                        <td> {{ sortie.getOrganisateur().pseudo }}  </td>

                        <td>
                            {#  Afficher - Annuler  #}
                            {% if sortie.canRead and sortie.canCancel(app.user) %}
                                <a href="{{ path('event',{'id' : sortie.id }) }}">Afficher</a> - <a href="#">Annuler</a>

                                {# Modifié - Publier #}
                            {% elseif sortie.canModify(app.user)   %}
                                <a href="{{ path('update_event',{'id' : sortie.id }) }}">Modifier</a> - <a href="#">Publier</a>


                                {# Afficher - Se desister #}
                            {% elseif sortie.canRead() and sortie.inscriptions.contains(app.user)  %}
                                <a href="{{ path('event',{'id' : sortie.id }) }}">Afficher</a> - <a href="{{ path('reject_inscription',{'id' : sortie.id }) }}">Se désister</a>

                                {# Afficher - S'inscrire #}
                            {% elseif sortie.canRead() and sortie.inscriptions.contains(app.user) %}
                                <a href="{{ path('event',{'id' : sortie.id }) }}">Afficher</a> - <a href="{{ path('inscription_to_event',{'id' : sortie.id }) }}">S'inscrire</a>


                                {# Afficher #}
                            {% else %}
                                <a href="{{ path('event',{'id' : sortie.id }) }}">Afficher</a>
                                {{ dump(sortie.inscriptions.contains(app.user.nom)) }}

                            {% endif %}


                        </td>

                    </tr>
                {% endfor %}

            </table>

        </div>
        {# -------------------  Bouton Création d'une sortie ----------------------- #}
        <div class="btnCreaEvent">
            <button type="submit" class="btn btn-primary mb-2"><a href="{{ path('create_event') }}">Créer une sortie</a>
            </button>

        </div>


    </div>
{% endblock %}