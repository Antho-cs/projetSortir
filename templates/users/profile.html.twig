{% extends 'layoutDisplay.html.twig' %}

{% block title %}
    Sortir.com | Profil
{% endblock %}

{% block mainSection %}
    <div class="width-100 flex-centered">
        <h2 class="displayPseudo">{{ currentUser.pseudo }}<span class="point-logo">.</span></h2>
    </div>
    <div class="sidebyside flex-centered">
        <div class="width-100 flex-centered">
            <div class="side width-50 flex-centered">
                <img class="img-profil" src="{{ asset('uploads/' ~ currentUser.urlPhoto) }}">
            </div>
            <div class="side width-50 flex-centered">
                <div class="width-100 text-align">
                    <b>Prénom: </b>{{ currentUser.prenom }}<br>
                </div>
                <div class="width-100 text-align">
                    <b>Nom: </b>{{ currentUser.nom }}<br>
                </div>
                <div class="width-100 text-align">
                    <b>Téléphone: </b>{{ currentUser.telephone }}<br>
                </div>
                <div class="width-100 text-align">
                    <b>Adresse mail: </b>{{ currentUser.mail }}<br>
                </div>
                <div class="width-100 text-align">
                    <b>Campus: </b>{{ currentUser.campus.nomCampus }}<br>
                </div>
            </div>
        </div>

        <div class="edit-user-retour width-100 flex-centered">
            <a href="{{ path('home') }}">
                <button class="btn btn-primary">Retour</button>
            </a>
        </div>
    </div>
{#    <footer>#}
{#        <p>Made with ❤️</p>#}
{#    </footer>#}
{% endblock %}