{% extends 'layout.html.twig' %}

{% block titrePage %}
{% endblock %}

{% block mainSection %}


    <h1>Mon profil</h1>

    <div class="upProfileUser">

        {{ form_start(upProfilUserFormType) }}

        <div>
            {{ form_row(upProfilUserFormType.Pseudo, {'attr' : {'placeholder': app.user.Pseudo }}) }}
            {{ form_row(upProfilUserFormType.prenom, {'attr' : {'placeholder': app.user.prenom }}) }}
            {{ form_row(upProfilUserFormType.nom, {'attr' : {'placeholder': app.user.nom }}) }}
            {{ form_row(upProfilUserFormType.telephone, {'attr' : {'placeholder': app.user.telephone }}) }}
            {{ form_row(upProfilUserFormType.mail, {'attr' : {'placeholder': app.user.mail }}) }}
            {{ form_row(upProfilUserFormType.password.first) }}
            {{ form_row(upProfilUserFormType.password.second) }}

            <div class="upProfileUser_campus">
            <label for="exampleFormControlSelect1">Campus</label>
            <select class="form-control" id="exampleFormControlSelect1">
                {% for c in campus %}
                    <option>
                        {{ c.nomCampus }}
                    </option>
                {% endfor %}
            </select>
            </div>

        </div>

        <div class="side">
            {{ form_label(upProfilUserFormType.photo)}}
            <link rel="photo" href="{{ asset('https://via.placeholder.com/150') }}">
            {{ form_widget(upProfilUserFormType.photo) }}
        </div>

        <div class="upProfileUser-btn">
            {{ form_row(upProfilUserFormType.enregistrer) }}
            {{ form_row(upProfilUserFormType.retour) }}
        </div>

    </div>

    {{ form_end(upProfilUserFormType) }}

{% endblock %}